<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>pt.ist</groupId>
		<artifactId>web-app-project</artifactId>
		<version>1.1.0-SNAPSHOT</version>
	</parent>

	<groupId>pt.ist.bennu</groupId>
	<artifactId>bennu-webapp</artifactId>
	<version>2.0-SNAPSHOT</version>
	<packaging>war</packaging>
	<name>Bennu Webapp</name>

	<properties>
		<version.pt.ist.bennu.bennu-portal>2.0.0-SNAPSHOT</version.pt.ist.bennu.bennu-portal>
		<version.pt.ist.bennu.bennu-admin>2.0.0-SNAPSHOT</version.pt.ist.bennu.bennu-admin>
		<version.pt.ist.bennu.bennu-theme>1.0-SNAPSHOT</version.pt.ist.bennu.bennu-theme>
		<version.pt.ist.bennu.dot-theme>1.0-SNAPSHOT</version.pt.ist.bennu.dot-theme>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-maven-plugin</artifactId>
				<version>9.0.0.v20130308</version>
				<configuration>
					<scanIntervalSeconds>2</scanIntervalSeconds>
					<stopKey>foo</stopKey>
					<stopPort>9999</stopPort>
					<encoding>UTF-8</encoding>
					<webApp>
						<contextPath>/xpto</contextPath>
						<baseResource implementation="org.eclipse.jetty.util.resource.ResourceCollection">
							<resourcesAsCSV>
								src/main/webapp/,
<!-- 								../bennu/client/example-ui/src/main/webapp, -->
<!-- 								../bennu/portal-frameworks/bankai/src/main/webapp, -->
								../bennu/client/example-ui/target/minifier/minified,
								../bennu/portal-frameworks/bankai/target/minifier/minified
							</resourcesAsCSV>
						</baseResource>
					</webApp>
					<systemProperties>
						<systemProperty>
							<name>org.eclipse.jetty.server.Request.maxFormContentSize</name>
							<value>10485760</value>
						</systemProperty>
					</systemProperties>
				</configuration>
				<executions>
					<execution>
						<id>start-jetty</id>
						<phase>pre-integration-test</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<scanIntervalSeconds>0</scanIntervalSeconds>
							<daemon>true</daemon>
						</configuration>
					</execution>
					<execution>
						<id>stop-jetty</id>
						<phase>post-integration-test</phase>
						<goals>
							<goal>stop</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-portal</artifactId>
			<version>${version.pt.ist.bennu.bennu-portal}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-server</artifactId>
			<version>${version.pt.ist.bennu.bennu-admin}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-client</artifactId>
			<version>${version.pt.ist.bennu.bennu-admin}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-theme</artifactId>
			<version>${version.pt.ist.bennu.bennu-theme}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>aqua-theme</artifactId>
			<version>${version.pt.ist.bennu.bennu-theme}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>dot-theme</artifactId>
			<version>${version.pt.ist.bennu.dot-theme}</version>
		</dependency>
		<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-renderers-example</artifactId>
			<version>3.0.0-SNAPSHOT</version>
		</dependency>
		<!--<dependency>
			<groupId>pt.ist.bennu</groupId>
			<artifactId>bennu-vaadin-example</artifactId>
			<version>2.0.0-SNAPSHOT</version>
			</dependency>-->
		<dependency>
			<groupId>pt.ist</groupId>
			<artifactId>todo-manager</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>pt.ist</groupId>
			<artifactId>todo-manager-ui</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
				<groupId>pt.ist.bennu</groupId>
				<artifactId>example-ui</artifactId>
				<version>2.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
				<groupId>pt.ist</groupId>
				<artifactId>bankai-example</artifactId>
				<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<repositories>
		<repository>
			<id>fenix-ashes-maven-repository</id>
			<url>https://fenix-ashes.ist.utl.pt/nexus/content/groups/fenix-ashes-maven-repository</url>
		</repository>
	</repositories>
</project>
